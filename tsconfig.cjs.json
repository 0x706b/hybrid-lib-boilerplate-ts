{
   "extends": "./tsconfig.json",
   "compilerOptions": {
      "incremental": true,
      "module": "commonjs",
      "outDir": "dist/commonjs",
      "rootDir": "source",
      "tsBuildInfoFile": "tsbuildinfo/cjs.tsbuildinfo",
      "plugins": [
         {
            "exclude": ["*"],
            "transform": "@zerollup/ts-transform-paths"
         }
      ]
   },
   "exclude": ["build", "dist", "node_modules", "test"],
   "include": ["source"]
}
