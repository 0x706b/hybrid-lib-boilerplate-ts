{
   "name": "@0x706b/hybrid-lib-boilerplate-ts",
   "version": "1.0.0",
   "description": "A boilerplate project for making a hybrid (commonjs/esm) TypeScript library",
   "main": "dist/index.js",
   "type": "module",
   "types": "dist/index.d.ts",
   "exports": {
      ".": {
         "import": "./dist/index.js",
         "require": "./dist/commonjs/index.js"
      },
      "./lib/": {
         "import": "./dist/",
         "require": "./dist/commonjs/"
      }
   },
   "repository": "git://github.com/0x706b/hybrid-lib-boilerplate-ts",
   "author": "Peter Krol <peter@peterkrol.com>",
   "license": "MIT",
   "scripts": {
      "build:test": "ttsc --build ./test/tsconfig.json --verbose",
      "build:esm": "ttsc --build ./source/tsconfig.esm.json --verbose",
      "build:cjs": "ttsc --build ./source/tsconfig.cjs.json --verbose",
      "build": "yarn clean && yarn build:esm && yarn build:cjs && ts-node ./scripts/package.ts && yarn prettier && yarn sort-package-json ./dist/package.json",
      "test": "yarn clean:test && yarn build:test && jest build/test",
      "clean:test": "rimraf build",
      "clean": "rimraf dist/package.json dist/*.{js,d.ts} dist/**/*.{js,d.ts}",
      "prettier": "prettier --write --config ./.prettierrc.json ./dist",
      "prepublish": "yarn build",
      "debug": "nodemon --config ./nodemon-debug.json",
      "publish:package": "yarn version && yarn build && yarn publish dist"
   },
   "devDependencies": {
      "@0x706b/ts-transform-cjs-import": "^0.1.5",
      "@0x706b/ts-transform-esm-specifier": "^0.1.9",
      "@types/chai": "^4.2.12",
      "@types/jest": "^26.0.10",
      "@types/node": "^14.6.0",
      "@typescript-eslint/eslint-plugin": "^3.9.1",
      "@typescript-eslint/parser": "^3.9.1",
      "@zerollup/ts-transform-paths": "^1.7.18",
      "chai": "^4.2.0",
      "eslint": "^7.7.0",
      "eslint-config-prettier": "^6.11.0",
      "eslint-plugin-prettier": "^3.1.4",
      "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
      "eslint-plugin-sort-keys-fix": "^1.1.1",
      "eslint-plugin-typescript-sort-keys": "^1.3.0",
      "fp-ts": "^2.8.1",
      "jest": "^26.4.1",
      "nodemon": "^2.0.4",
      "prettier": "^2.0.5",
      "rimraf": "^3.0.2",
      "sort-package-json": "^1.44.0",
      "ts-node": "^9.0.0",
      "ttypescript": "^1.5.10",
      "typescript": "next"
   },
   "dependencies": {},
   "publishConfig": {
      "registry": "https://npm.pkg.github.com/"
   }
}
