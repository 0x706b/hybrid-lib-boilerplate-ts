{
   "name": "hybrid-lib-boilerplate-ts",
   "version": "1.0.0",
   "description": "A boilerplate project for building a hybrid (cjs/esm) TypeScript library, with configurable browserslist targets, and a 'fixed' ESM version for Node 14",
   "repository": "git://github.com/0x706b/hybrid-lib-boilerplate-ts",
   "license": "MIT",
   "author": "Peter Krol <peter@peterkrol.com>",
   "exports": {
      ".": {
         "import": "./dist/esm-fix/index.js",
         "require": "./dist/cjs/index.js"
      },
      "./": {
         "import": "./dist/esm-fix/",
         "require": "./dist/cjs/"
      }
   },
   "module": "./dist/esm-shake/index.js",
   "main": "dist/cjs/index.js",
   "types": "dist/index.d.ts",
   "scripts": {
      "autofix": "yarn lint --fix",
      "build": "yarn build:types && yarn build:esm && yarn build:cjs && yarn build:postprocess",
      "build:cjs": "babel --config-file ./config/cjs.babelrc.json --extensions '.js' --out-dir dist/_dist_/cjs .intermediary",
      "build:esm": "ttsc --build ./config/tsconfig.esm.json && ttsc --build ./config/tsconfig.esm-fix.json && babel --config-file ./config/esm.babelrc.json --extensions '.js' --out-dir dist/_dist_/esm-shake .intermediary",
      "build:types": "ttsc --build ./config/tsconfig.types.json --verbose",
      "build:postprocess": "rimraf .intermediary && ts-node ./scripts/package.ts && prettier --write ./dist && yarn sort-package-json ./dist/package.json",
      "build:test": "ttsc --build ./config/tsconfig.test.json --verbose",
      "clean": "rimraf dist build tsbuildinfo",
      "clean:test": "rimraf build",
      "format": "prettier --write ./source",
      "lint": "eslint .",
      "prepublish": "yarn build",
      "publish:package": "yarn version && yarn clean && yarn build && yarn publish dist",
      "test": "yarn build:test && jest build/test"
   },
   "dependencies": {
      "core-js": "3"
   },
   "devDependencies": {
      "@0x706b/ts-transform-fix-esm": "^0.0.11",
      "@babel/cli": "^7.11.5",
      "@babel/core": "^7.11.5",
      "@babel/plugin-proposal-class-properties": "^7.10.4",
      "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
      "@babel/preset-env": "^7.11.5",
      "@types/jest": "^26.0.13",
      "@types/node": "^14.6.3",
      "@typescript-eslint/eslint-plugin": "^4.0.1",
      "@typescript-eslint/parser": "^4.0.1",
      "@zerollup/ts-transform-paths": "^1.7.18",
      "eslint": "^7.8.1",
      "eslint-config-prettier": "^6.11.0",
      "eslint-import-resolver-typescript": "^2.3.0",
      "eslint-plugin-import": "^2.22.0",
      "eslint-plugin-prettier": "^3.1.4",
      "eslint-plugin-simple-import-sort": "^5.0.3",
      "eslint-plugin-sort-keys-fix": "^1.1.1",
      "eslint-plugin-typescript-sort-keys": "^1.3.0",
      "fp-ts": "^2.8.2",
      "jest": "^26.4.2",
      "prettier": "^2.1.1",
      "rimraf": "^3.0.2",
      "sort-package-json": "^1.44.0",
      "ts-node": "^9.0.0",
      "ttypescript": "^1.5.11",
      "typescript": "next"
   }
}
