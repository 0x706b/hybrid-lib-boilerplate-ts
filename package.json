{
   "name": "hybrid-lib-boilerplate-ts",
   "version": "1.0.0",
   "description": "A boilerplate project for building a hybrid (cjs/esm) TypeScript library, with both es2020 and es2015 targets",
   "repository": "git://github.com/0x706b/hybrid-lib-boilerplate-ts",
   "license": "MIT",
   "author": "Peter Krol <peter@peterkrol.com>",
   "exports": {
      ".": {
         "import": "./dist/index.js",
         "require": "./dist/commonjs/index.js"
      },
      "./": {
         "import": "./dist/",
         "require": "./dist/commonjs/"
      }
   },
   "main": "dist/index.js",
   "types": "dist/index.d.ts",
   "scripts": {
      "autofix": "yarn lint --fix",
      "build": "yarn build:esm && yarn build:cjs && yarn build:types && yarn build:postprocess",
      "build:cjs": "ttsc --build ./__config__/tsconfig.cjs.json --verbose && ttsc --build ./__config__/tsconfig.cjs-2020.json",
      "build:esm": "ttsc --build ./__config__/tsconfig.esm.json --verbose && ttsc --build ./__config__/tsconfig.esm-2020.json && ttsc --build ./__config__/tsconfig.esm-fix.json",
      "build:types": "ttsc --build ./__config__/tsconfig.types.json --verbose",
      "build:postprocess": "ts-node ./scripts/package.ts && prettier --write ./dist && yarn sort-package-json ./dist/package.json",
      "build:test": "ttsc --build ./__config__/tsconfig.test.json --verbose",
      "clean": "rimraf dist build tsbuildinfo",
      "clean:test": "rimraf build",
      "format": "prettier --write ./source",
      "lint": "eslint .",
      "prepublish": "yarn build",
      "publish:package": "yarn version && yarn clean && yarn build && yarn publish dist",
      "test": "yarn build:test && jest build/test"
   },
   "dependencies": {},
   "devDependencies": {
      "@0x706b/ts-transform-fix-esm": "^0.0.11",
      "@types/jest": "^26.0.13",
      "@types/node": "^14.6.3",
      "@typescript-eslint/eslint-plugin": "^4.0.1",
      "@typescript-eslint/parser": "^4.0.1",
      "@zerollup/ts-transform-paths": "^1.7.18",
      "eslint": "^7.8.1",
      "eslint-config-prettier": "^6.11.0",
      "eslint-import-resolver-typescript": "^2.3.0",
      "eslint-plugin-import": "^2.22.0",
      "eslint-plugin-prettier": "^3.1.4",
      "eslint-plugin-simple-import-sort": "^5.0.3",
      "eslint-plugin-sort-keys-fix": "^1.1.1",
      "eslint-plugin-typescript-sort-keys": "^1.3.0",
      "fp-ts": "^2.8.2",
      "jest": "^26.4.2",
      "prettier": "^2.1.1",
      "rimraf": "^3.0.2",
      "sort-package-json": "^1.44.0",
      "ts-node": "^9.0.0",
      "ttypescript": "^1.5.11",
      "typescript": "next"
   }
}
