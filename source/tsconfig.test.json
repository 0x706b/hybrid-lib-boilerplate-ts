      "outDir": "../build",
      "baseUrl": "../",
      "rootDir": "../",
      "paths": {
         "@@root/*": ["./source/*"]
      },
      "plugins": [
         {
            "transform": "@zerollup/ts-transform-paths",
            "exclude": ["*"]
