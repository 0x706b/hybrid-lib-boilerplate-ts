{
   "compilerOptions": {
      "baseUrl": ".",
      "declaration": true,
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "lib": ["es2020"],
      "moduleResolution": "node",
      "noEmit": false,
      "noEmitOnError": false,
      "noErrorTruncation": true,
      "paths": {
         "@@root/*": ["./source/*"]
      },
      "strict": true,
      "suppressImplicitAnyIndexErrors": true,
      "target": "es2020"
   },
   "exclude": ["build", "node_modules", "dist"]
}
