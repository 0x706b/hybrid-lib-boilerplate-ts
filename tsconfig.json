{
   "compilerOptions": {
      "baseUrl": ".",
      "esModuleInterop": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "noEmit": false,
      "noEmitOnError": false,
      "noErrorTruncation": true,
      "paths": {
         "@@root/*": ["./source/*"]
      },
      "plugins": [
         {
            "exclude": ["*"],
            "transform": "@zerollup/ts-transform-paths"
         }
      ],
      "strict": true,
      "suppressImplicitAnyIndexErrors": true
   },
   "exclude": ["build", "node_modules", "dist"]
}
